{
  "train_micro_batch_size_per_gpu": "auto",
  "gradient_accumulation_steps": "auto",
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": "auto",
      "betas": [0.9, 0.999],
      "eps": 1e-8
    }
  },
  "zero_optimization": {
    "stage": 3,
    "offload_param": {
      "device": "none"
    },
    "offload_optimizer": {
      "device": "none"
    },
    "allgather_partitions": true,
    "allgather_bucket_size": 2e8,
    "reduce_scatter": true,
    "reduce_bucket_size": 2e8,
    "overlap_comm": true
  },
  "fp16": {
    "enabled": true,
    "loss_scale": 512,
    "loss_scale_window": 1000,
    "hysteresis": 2,
    "min_loss_scale": 64
  }
}